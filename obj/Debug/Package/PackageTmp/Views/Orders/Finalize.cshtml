@model rcateShoppingApp1.Models.CodeFirst.Order

@{
    ViewBag.Title = "Details";
}

<div style="margin-left:50px">
    <h2>Finalize Order </h2>

    <div class="row pull-right" style="padding:5px">
        @using (Html.BeginForm("Finalize", "Orders", new { id = Model.Id }, FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger pull-right">Finalize</button>

        }

    </div>

        <hr />
    </div>
    <dl class="dl-horizontal">

        <h4 style="margin-left:50px"><u>Shipping Information</u></h4>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDetails)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDetails)
        </dd>

        <br />

        <h4 style="margin-left:50px"><u>Payment Information</u></h4>

        <dt>
            @Html.DisplayNameFor(model => model.CardNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CardNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CVC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CVC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExpMonth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpMonth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExpYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpYear)
        </dd>
    </dl>

    <div style="margin-left:50px">

        <table class="table">
            <tr>
                <th></th>
                <th>
                    Item
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price Per
                </th>
                <th></th>
            </tr>

            @foreach (var item in ViewBag.CartItems)
            {
                <tr>
                    <td>
                        <img src="@item.Item.MediaURL" style="max-width: 80px" />
                    </td>
                    <td>
                        @item.Item.Name
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        @item.Item.Price
                    </td>
                    <td>
                        <a class="btn btn-default" href="@Url.Action("Details", "Items", new { id = item.ItemId})">Details</a>
                        @*@Html.ActionLink("Details", "Details", "Items", new { id = item.ItemId }, null)*@
                    </td>
                </tr>

            }

        </table>
    </div>

<div style="margin-left:50px">

    <hr />

    <h4>
        <strong>
            Total
        </strong>
    </h4>

    <h4>
        $@ViewBag.carttotal
    </h4>
</div>


<div class="row" style="padding:5px"> 

        @using (Html.BeginForm("Delete", "Orders", new { id = Model.Id }, FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-default pull-right">Cancel</button>

        }
</div>



